<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/black"
    android:padding="16dp">

    <ImageView
        android:id="@+id/goBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 정보를 입력해주세요"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goBackImageView"
        app:layout_constraintHorizontal_bias=".1"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoTextView"
        android:layout_marginTop="70dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/fluorescent_green"
        android:drawableTop="@drawable/ic_baseline_add_24"
        android:paddingTop="7dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="@id/profileImageView"
        app:layout_constraintBottom_toBottomOf="@id/profileImageView"/>

    <EditText
        android:id="@+id/newUserNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/prompt_userNickname"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:paddingLeft="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/infoTextView"
        app:layout_constraintTop_toBottomOf="@id/profileImageView" />

    <EditText
        android:id="@+id/newUserId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_userId"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:paddingLeft="10dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/infoTextView"
        app:layout_constraintTop_toBottomOf="@id/newUserNickname" />

    <EditText
        android:id="@+id/newUserPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_userPassword"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        android:background="#E6FFFFFF"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/newUserId"
        app:layout_constraintStart_toStartOf="@id/infoTextView"
        app:layout_constraintTop_toBottomOf="@id/newUserId" />

    <EditText
        android:id="@+id/newUserPasswordConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_userPasswordConfirm"
        android:textColorHint="@color/gray"
        android:textSize="16sp"
        android:background="#E6FFFFFF"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:selectAllOnFocus="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="@id/newUserId"
        app:layout_constraintStart_toStartOf="@id/infoTextView"
        app:layout_constraintTop_toBottomOf="@id/newUserPassword" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/action_sign_up"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#79F116"/>

</androidx.constraintlayout.widget.ConstraintLayout>