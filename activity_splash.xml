<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/black">

    <ImageView
        android:id="@+id/logo_fluorescent_stone"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:src="@drawable/logo_fluorescent_stone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias=".4" />

    <ImageView
        android:id="@+id/logo_goosukki_colored"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:src="@drawable/logo_goosukki_colored"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_fluorescent_stone" />

</androidx.constraintlayout.widget.ConstraintLayout>